{% extends 'base/base.html.twig' %}

{% block content %}

<body>
<div class="container">
    <br>
    <br>
    <br>
    <br>

{{ form_start(membreForm) }}


    <form class="form-horizontal" role="form" method="POST" action="">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <h2> Formulaire d'inscription </h2>
                <hr>
            </div>
        </div>
        <div class="row">
                {{ form_errors(membreForm.username)}}
            <div class="col-md-3 field-label-responsive">
                <label for="name">Identifiant</label>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                        <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-user"></i></div>
                        {{ form_widget(membreForm.username, {'attr' : {
                            'placeholder' : 'Identifiant',
                            'class' : 'form-control'
                        } } ) }}
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-control-feedback">
                        <span class="text-danger align-middle">
                            <!-- Put name validation error messages here -->
                        </span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 field-label-responsive">
                <label for="name">Nom</label>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                        <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-user"></i></div>
                        {{ form_widget(membreForm.nom, {'attr' : {
                            'placeholder' : 'nom',
                            'class' : 'form-control'
                        } } ) }}
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-control-feedback">
                        <span class="text-danger align-middle">
                            <!-- Put name validation error messages here -->
                        </span>
                </div>
            </div>
        </div>
        <div class="row">
                <div class="col-md-3 field-label-responsive">
                    <label for="name">Pr√©nom</label>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                            <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-user"></i></div>
                            {{ form_widget(membreForm.prenom, {'attr' : {
                                'placeholder' : 'prenom',
                                'class' : 'form-control'
                            } } ) }}
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-control-feedback">
                            <span class="text-danger align-middle">
                                <!-- Put name validation error messages here -->
                            </span>
                    </div>
                </div>
            </div>
        <div class="row">
            <div class="col-md-3 field-label-responsive">
                <label for="email">Adresse email</label>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                        <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-at"></i></div>
                        {{ form_widget(membreForm.email, {'attr' : {
                            'placeholder' : 'email',
                            'class' : 'form-control'
                        } } ) }}
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-control-feedback">
                        <span class="text-danger align-middle">
                            <!-- Put e-mail validation error messages here -->
                        </span>
                </div>
            </div>
        </div>
        <div class="row">
         
            <div class="col-md-3 field-label-responsive">    
                <label for="password">Mot de passe</label>
            </div>
            
            <div class="col-md-6">
                <div class="form-group has-danger">
                    <div class="input-group mb-2 mr-sm-2 mb-sm-0">

                        {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                        <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-key"></i></div>
                        {{ form_widget(membreForm.password.first, {'attr' : {
                            'placeholder' : 'mot de passe',
                            'class' : 'form-control'
                        } } ) }}
                        {% endif %}                       
                    </div>
                </div>
            </div>

        </div>

        <div class="row">
                
                 <div class="col-md-3 field-label-responsive">    
                     <label for="password">Confirmation mot de passe</label>
                 </div>
                 
                 <div class="col-md-6">
                     <div class="form-group has-danger">
                         <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                             {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                             <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-key"></i></div>
                             {{ form_widget(membreForm.password.second, {'attr' : {
                                 'placeholder' : ' Confirmation mot de passe',
                                 'class' : 'form-control'
                             } } ) }}
                             {% endif %}  
                         </div>
                     </div>
                 </div>
     
             </div>
       
        <br>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                    {{ form_widget(membreForm.Enregistrer, {
                        'label' : action,
                        'attr' : {
                            'class' : 'btn btn-success' 
                        }
                    }) }}
            </div>
        </div>
    </div>
{{ form_end(membreForm) }}


{% endblock %}