{% extends 'base_backoffice.html.twig' %}

{% block content %}

{% for message in app.flashes('errors') %}
<div style="background: pink; color:red"></div>
{% endfor %}
<div id="login">
        <h4 class="text-center text-white pt-4">Connexion</h4>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <!-- 5 impÃ©ratifs a mettre dans le form:
                            1/ method="POST"
                            2/ action="login_check" en TWIG
                            3/ name="_username"
                            4/ name="_password"
                            5/ value="lastUsername" en TWIG 
                        -->
                        <form id="login-form" class="form" action="{{ path('login_check') }}" method="post" value="{{lastUsername}}">
                            <div class="form-group">
                                <label for="username" class="text-info">Identifiant :</label><br>
                                <input type="text" name="_username" id="username" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-info">Mot de passe :</label><br>
                                <input type="password" name="_password" id="password" class="form-control">
                            </div>
                            <div class="form-group">
                            <br>
                            <br>
                                <input type="submit" name="submit" class="btn btn-info btn-md" value="Connexion">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}